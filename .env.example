# Environment Configuration for Port Terminal Simulation & Logistics Analytics
# Copy this file to .env and add your actual configuration values

# Simulation Parameters
MAX_BERTHS=3
CRANES_PER_BERTH=4
CONTAINER_UNLOAD_TIME_MEAN=2.5
CONTAINER_UNLOAD_TIME_STD=0.5
BERTH_TRANSITION_TIME=60

# Container Configuration
DRY_CONTAINER_PROBABILITY=0.95
REEFER_CONTAINER_PROBABILITY=0.05
TRUCK_MODAL_SPLIT=0.85
TRAIN_MODAL_SPLIT=0.15

# Yard Configuration
REGULAR_YARD_CAPACITY=25000
REEFER_YARD_CAPACITY=2000
STARTING_YARD_UTILIZATION=50
MAX_CONTAINERS_IN_PILE=4

# Gate Operations
GATE_OPEN_HOUR=7
GATE_CLOSE_HOUR=17
TRUCKS_PER_HOUR=500
GATE_CAPACITY=50

# Train Operations
TRAINS_PER_DAY=6
TRAIN_CAPACITY=250

# 3D Visualization Settings
ENABLE_3D_ANIMATION=True
CONTAINER_WIDTH=2.5
CONTAINER_HEIGHT=2.5
CHASSIS_HEIGHT=1.5
PORTAL_WIDTH=26.5
PORTAL_HEIGHT=15

# Machine Learning Configuration
BERT_MODEL_PATH=./BERT_for_HS/trained_models_hs/
HS_CODE_CLASSIFICATION_THRESHOLD=0.8
MAX_SEQUENCE_LENGTH=512

# Web Scraping Configuration
SCRAPING_DELAY=1
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Data Paths
DATA_PATH=./data/
RESULTS_PATH=./results/
MODELS_PATH=./models/
LOGS_PATH=./logs/

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_BASE=light

# Performance Settings
SIMULATION_SPEED=1.0
ANIMATION_FPS=30
PARALLEL_PROCESSING=True
MAX_WORKERS=4

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/simulation.log
ENABLE_DETAILED_LOGGING=True

# Development Settings
DEBUG=False
VERBOSE=True
SAVE_SIMULATION_RESULTS=True
EXPORT_VISUALIZATIONS=True
